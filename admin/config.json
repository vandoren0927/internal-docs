{
  "backend": {
    "name": "github",
    "repo": "vandoren0927/internal-docs",
    "branch": "main",
    "auth_type": "oauth",
    "app_id": "Ov23liq4U9JnhYK16U2C",
    "base_url": "https://api.netlify.com",
    "auth_endpoint": "auth"
  },
  "media_folder": "static/img/uploads",
  "public_folder": "img/uploads",
  "collections": [
    {
      "name": "root_docs",
      "label": "Root Docs",
      "folder": "docs",
      "create": true,
      "slug": "{{category}}/{{slug}}",
      "fields": [
        {
          "label": "分類",
          "name": "category",
          "widget": "select",
          "options": [
            "tutorial-basics",
            "tutorial-extras",
            "api",
            "my-new-section"
          ]
        },
        {
          "label": "標題",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "備註",
          "name": "remark",
          "widget": "string",
          "required": false,
          "hint": "請填寫此文件的新增或修改者（例如：張三、李四）"
        },
        {
          "label": "正文",
          "name": "body",
          "widget": "markdown"
        }
      ]
    },
