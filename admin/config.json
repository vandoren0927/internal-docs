{
  "backend": {
    "name": "github",
    "repo": "vandoren0927/internal-docs",
    "branch": "main",
    "base_url": "https://internal-docs-cms.netlify.app/netlify/functions",
    "auth_endpoint": "api/auth",
    "site_domain": "internal-docs-cms.netlify.app"
  },
  "site_url": "https://internal-docs-cms.netlify.app",
  "display_url": "https://internal-docs-cms.netlify.app",
  "media_folder": "static/img/uploads",
  "public_folder": "img/uploads",
  "collections": [
    {
      "name": "root_docs",
      "label": "Root Docs",
      "folder": "docs",
      "create": true,
      "slug": "{{category}}/{{slug}}",
      "fields": [
        {
          "label": "分類",
          "name": "category",
          "widget": "select",
          "options": [
            "tutorial-basics",
            "tutorial-extras",
            "api",
            "my-new-section"
          ]
        },
        {
          "label": "標題",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "備註",
          "name": "remark",
          "widget": "string",
          "required": false,
          "hint": "請填寫此文件的新增或修改者（例如：張三、李四）"
        },
        {
          "label": "正文",
          "name": "body",
          "widget": "markdown"
        }
      ]
    },
    {
      "name": "tutorial_basics",
      "label": "Tutorial – Basics",
      "folder": "docs/tutorial-basics",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        {
          "label": "標題",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "備註",
          "name": "remark",
