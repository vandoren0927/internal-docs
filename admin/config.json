        },
        {
          "label": "備註",
          "name": "remark",
          "widget": "string",
          "required": false,
          "hint": "請填寫此文件的新增或修改者"
        },
        {
          "label": "正文",
          "name": "body",
          "widget": "markdown"
        }
      ]
    },
    {
      "name": "my_new_section",
      "label": "My New Section",
      "folder": "docs/my-new-section",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        {
