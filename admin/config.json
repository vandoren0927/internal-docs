{
  "backend": {
    "name": "git-gateway",
    "repo": "vandoren0927/internal-docs",
    "branch": "main"
  },

  "media_folder": "static/img/uploads",
  "public_folder": "/img/uploads",
  "site_url": "https://internal-docs-cms.netlify.app",
  "auth_endpoint": "/.netlify/identity",
  "publish_mode": "editorial_workflow",

  "collections": [
    {
      "name": "root_docs",
      "label": "Root Docs",
      "folder": "docs",
      "create": true,
      "slug": "{{fields.category}}/{{slug}}",
      "fields": [
        {
          "label": "分類 (子資料夾)",
          "name": "category",
          "widget": "string",
          "hint": "請輸入要放入的子資料夾名稱"
        },
        {
          "label": "Slug (檔名)",
          "name": "slug",
          "widget": "string",
          "required": true,
          "hint": "決定儲存檔案時的檔名，範例：my-article"
        },
        {
          "label": "備註",
          "name": "note",
          "widget": "string",
          "required": false,
          "hint": "可輸入這篇文件的額外說明或備註"
        },
        {
          "label": "標題",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "正文",
          "name": "body",
          "widget": "markdown"
        }
      ]
    },
    {
      "name": "tutorial_basics",
      "label": "Tutorial – Basics",
      "folder": "docs/tutorial-basics",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        { "label": "標題", "name": "title", "widget": "string" },
        { "label": "Slug", "name": "slug", "widget": "string", "required": true },
        { "label": "正文", "name": "body", "widget": "markdown" }
      ]
    },
    {
      "name": "tutorial_extras",
      "label": "Tutorial – Extras",
      "folder": "docs/tutorial-extras",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        { "label": "標題", "name": "title", "widget": "string" },
        { "label": "Slug", "name": "slug", "widget": "string", "required": true },
        { "label": "正文", "name": "body", "widget": "markdown" }
      ]
    },
    {
      "name": "api",
      "label": "API Documentation",
      "folder": "docs/api",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        { "label": "標題", "name": "title", "widget": "string" },
        { "label": "Slug", "name": "slug", "widget": "string", "required": true },
        { "label": "正文", "name": "body", "widget": "markdown" }
      ]
    },
    {
      "name": "my_new_section",
      "label": "My New Section",
      "folder": "docs/my-new-section",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        { "label": "標題", "name": "title", "widget": "string" },
        { "label": "Slug", "name": "slug", "widget": "string", "required": true },
        { "label": "正文", "name": "body", "widget": "markdown" }
      ]
    }
  ]
}
