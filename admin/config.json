{
  "backend": {
    "name": "git-gateway",
    "branch": "main"
  },
  "media_folder": "static/img/uploads",
  "public_folder": "/img/uploads",
  "collections": [
    {
      "name": "docs",
      "label": "Documents",
      "folder": "docs",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        { "label": "Title", "name": "title", "widget": "string" },
        { "label": "Slug (optional, 無填將用預設)", "name": "slug", "widget": "string", "required": false },
        { "label": "Body", "name": "body", "widget": "markdown" }
      ]
    }
  ]
}
