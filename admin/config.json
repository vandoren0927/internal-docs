{
  "backend": {
    "name": "github",
    "repo": "vandoren0927/internal-docs",
    "branch": "main",
    "auth_type": "oauth",
    "app_id": "Ov23liq4U9JnhYK16U2C",
    "base_url": "https://api.netlify.com",
    "auth_endpoint": "auth"
  },
  "media_folder": "static/img/uploads",
  "public_folder": "/img/uploads",
  "collections": [
    {
      "name": "docs",
      "label": "Documents",
      "folder": "docs",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        {
          "label": "Title",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "Video (optional)",
          "name": "video",
          "widget": "file",
          "hint": "Upload an MP4/WebM file (committed to /static/img/uploads)",
          "required": false,
          "media_library": {
            "allow_multiple": false
          },
          "pattern": [
            "static/img/uploads/(.*)",
            "/img/uploads/$1"
          ]
        },
        {
          "label": "Body",
          "name": "body",
          "widget": "markdown"
        }
      ]
    }
  ]
}
