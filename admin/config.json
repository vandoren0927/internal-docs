{
  "backend": {
    "name": "github",
    "repo": "vandoren0927/internal-docs",
    "branch": "main",
    "auth_type": "oauth",
    "app_id": "Ov23liq4U9JnhYK16U2C",
    "base_url": "https://api.netlify.com",
    "auth_endpoint": "auth"
  },
  "media_folder": "static/img/uploads",
  "public_folder": "/img/uploads",
  "collections": [
    {
      "name": "docs",
      "label": "Documents",
      "folder": "docs",
      "create": true,
      "slug": "{{category}}/{{slug}}",
      "fields": [
        {
          "label": "Category",
          "name": "category",
          "widget": "select",
          "options": [
            "tutorial-basics",
            "tutorial-extras",
            "api",
            "my-new-section"
          ]
        },
        {
          "label": "Title",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "Video",
          "name": "video",
          "widget": "file",
          "required": false,
          "hint": "Upload an MP4/WebM file (will be committed to /static/img/uploads)"
        },
        {
          "label": "Body",
          "name": "body",
          "widget": "markdown"
        }
      ]
    }
  ]
}
