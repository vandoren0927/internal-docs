{
  "backend": {
    "name": "git-gateway",
    "repo": "vandoren0927/internal-docs",
    "branch": "main"
  },
  "media_folder": "static/img/uploads",
  "public_folder": "/img/uploads",
  "site_url": "https://internal-docs-cms.netlify.app",
  "auth_endpoint": "/.netlify/identity",
  "publish_mode": "editorial_workflow",
  "collections": [
    {
      "name": "root_docs",
      "label": "Root Docs",
      "folder": "docs",
      "create": true,
      "slug": "{{subfolder}}/{{slug}}",
      "nested": {
        "depth": 2,
        "summary": "{{title}}"
      },
      "fields": [
        {
          "label": "子分類 (子資料夾)",
          "name": "subfolder",
          "widget": "string",
          "hint": "要放到哪個子資料夾（像 001、002）"
        },
        {
          "label": "Slug (檔名)",
          "name": "slug",
          "widget": "string",
          "required": true,
          "hint": "決定檔名，例如 123"
        },
        {
          "label": "備註 (Optional)",
          "name": "note",
          "widget": "string",
          "required": false
        },
        {
          "label": "標題",
          "name": "title",
          "widget": "string"
        },
        {
          "label": "正文",
          "name": "body",
          "widget": "markdown"
        }
      ]
    },
    {
      "name": "tutorial_intro",
      "label": "Tutorial Intro",
      "files": [
        {
          "file": "docs/intro.md",
          "label": "Tutorial Intro",
          "name": "tutorial_intro",
          "fields": [
            { "label": "Title", "name": "title", "widget": "string" },
            { "label": "Body",  "name": "body",  "widget": "markdown" }
          ]
        }
      ]
    },
    {
      "name": "tutorial_basics",
      "label": "Tutorial – Basics",
      "folder": "docs/tutorial-basics",
      "create": true,
      "slug": "{{subfolder}}/{{slug}}",
      "nested": {
        "depth": 2,
        "summary": "{{title}}"
      },
      "fields": [
        {
          "label": "子分類 (子資料夾)",
          "name": "subfolder",
          "widget": "string",
          "hint": "請輸入要放入 Tutorial – Basics 底下的子資料夾名稱"
        },
        {
          "label": "Slug (檔名)",
          "name": "slug",
          "widget": "string",
          "required": true,
          "hint": "決定檔名，例如 my-article"
        },
        { "label": "備註 (Optional)", "name": "note", "widget": "string", "required": false },
        { "label": "標題", "name": "title", "widget": "string" },
        { "label": "正文", "name": "body",  "widget": "markdown" }
      ]
    },
    {
      "name": "tutorial_extras",
      "label": "Tutorial – Extras",
      "folder": "docs/tutorial-extras",
      "create": true,
      "slug": "{{subfolder}}/{{slug}}",
      "nested": {
        "depth": 2,
        "summary": "{{title}}"
      },
      "fields": [
        {
          "label": "子分類 (子資料夾)",
          "name": "subfolder",
          "widget": "string",
          "hint": "請輸入要放入 Tutorial – Extras 底下的子資料夾名稱"
        },
        {
          "label": "Slug (檔名)",
          "name": "slug",
          "widget": "string",
          "required": true,
          "hint": "決定檔名，例如 my-article"
        },
        { "label": "備註 (Optional)", "name": "note", "widget": "string", "required": false },
        { "label": "標題", "name": "title", "widget": "string" },
        { "label": "正文", "name": "body",  "widget": "markdown" }
      ]
    },
    {
      "name": "api",
      "label": "api",
      "folder": "docs/api",
      "create": true,
      "slug": "{{subfolder}}/{{slug}}",
      "nested": {
        "depth": 2,
        "summary": "{{title}}"
      },
      "fields": [
        {
          "label": "子分類 (子資料夾)",
          "name": "subfolder",
          "widget": "string",
          "hint": "請輸入要放入 api 底下的子資料夾名稱"
        },
        {
          "label": "Slug (檔名)",
          "name": "slug",
          "widget": "string",
          "required": true,
          "hint": "決定檔名，例如 my-article"
        },
        { "label": "備註 (Optional)", "name": "note", "widget": "string", "required": false },
        { "label": "標題", "name": "title", "widget": "string" },
        { "label": "正文", "name": "body",  "widget": "markdown" }
      ]
    },
    {
      "name": "my_new_section",
      "label": "My New Section",
      "folder": "docs/my-new-section",
      "create": true,
      "slug": "{{subfolder}}/{{slug}}",
      "nested": {
        "depth": 3,
        "summary": "{{title}}"
      },
      "fields": [
        {
          "label": "子分類 (子資料夾)",
          "name": "subfolder",
          "widget": "string",
          "hint": "請輸入要放入 My New Section 底下的子資料夾名稱"
        },
        {
          "label": "Slug (檔名)",
          "name": "slug",
          "widget": "string",
          "required": true,
          "hint": "決定檔名，例如 my-article"
        },
        { "label": "備註 (Optional)", "name": "note", "widget": "string", "required": false },
        { "label": "標題", "name": "title", "widget": "string" },
        { "label": "正文", "name": "body",  "widget": "markdown" }
      ]
    }
  ]
}
